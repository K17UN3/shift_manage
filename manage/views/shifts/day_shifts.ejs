        /* ä¼‘æ†©ãƒãƒ¼ã‚’éš ã™ãŸã‚ã®è¨­å®š (JSã§ä½¿ç”¨) */
        .hide-breaks .break-color-bar {
            display: none !important;
        }

        .nav-links a {
            text-decoration: none;
