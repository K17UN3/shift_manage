<body>

<div class="container">
    <div class="nav-links">
        <a href="/shifts/view">â† ã‚«ãƒ¬ãƒ³ãƒ€ãƒ¼ã«æˆ»ã‚‹</a>
    </div>

    <div class="controls">
        <h1>ğŸ“… <%= targetDate.format('YYYYå¹´MMæœˆDDæ—¥ (ddd)') %></h1>
        
        <label class="toggle-wrapper">
            <input type="checkbox" id="breakToggle" checked>
            ä¼‘æ†©ã‚’è¡¨ç¤ºã™ã‚‹
        </label>
    </div>

    <div class="shift-chart" id="shiftChart">
        <div class="chart-header">
            <div class="user-name-col">å¾“æ¥­å“¡å</div>
            <div class="time-slots-container">
                <% for (let h = 7; h <= 19; h++) { %>
                    <div class="time-label"><%= h %>:00</div>
                <% } %>
            </div>
        </div>

        <% allUsers.forEach(user => { %>
            <div class="chart-row">
                <div class="user-label"><%= user %></div>
                <div class="timeline-area">
                    <% 
                        const shift = dailyShiftsMap[user];
                        if (shift) {
                            const dayStart = 7; 
                            const dayEnd = 20;
                            const totalWidthHours = dayEnd - dayStart;

                            const sTime = moment(shift.start, 'HH:mm');
                            const eTime = moment(shift.end, 'HH:mm');

                            const startDecimal = sTime.hours() + sTime.minutes() / 60;
                            const endDecimal = eTime.hours() + eTime.minutes() / 60;

                            const leftPercent = ((startDecimal - dayStart) / totalWidthHours) * 100;
                            const widthPercent = ((endDecimal - startDecimal) / totalWidthHours) * 100;
                            
                            const durationHours = endDecimal - startDecimal;
                            const hasBreak = durationHours >= 6;
                    %>
                        <div class="shift-bar" style="left: <%= leftPercent %>%; width: <%= widthPercent %>%;">
                            <% if (hasBreak) { %>
                                <div class="break-color-bar" style="left: <%= (4 / durationHours) * 100 %>%; width: <%= (1 / durationHours) * 100 %>%;"></div>
                            <% } %>
                            <span class="shift-time-text">
                                <%= shift.start %> - <%= shift.end %>
                            </span>
                        </div>
                    <% } %>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>

<script>
    // ä¼‘æ†©è¡¨ç¤ºã®ON/OFFã‚’åˆ‡ã‚Šæ›¿ãˆã‚‹ã‚¹ã‚¯ãƒªãƒ—ãƒˆ
    const toggle = document.getElementById('breakToggle');
    const chart = document.getElementById('shiftChart');

    toggle.addEventListener('change', function() {
        if (this.checked) {
            chart.classList.remove('hide-breaks');
        } else {
            chart.classList.add('hide-breaks');
        }
    });
</script>

</body>
</html>